<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfirmarVotoActivity">

    <TextView
        android:id="@+id/textViewVotoFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não escolhido"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textViewVotoDiretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não escolhido"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/buttonConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="194dp"
        android:onClick="confirmarVoto"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVotoDiretor" />

    <EditText
        android:id="@+id/editTextNumberToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Ex: 55"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textViewVotoDiretor"
        app:layout_constraintTop_toBottomOf="@+id/textViewVotoDiretor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="73dp"
        android:text="Filme:"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="243dp"
        android:text="Diretor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTokenConfirmarVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token:"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberToken"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberToken" />
</androidx.constraintlayout.widget.ConstraintLayout>